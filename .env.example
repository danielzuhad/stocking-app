POSTGRES_DB=stocking_app
POSTGRES_USER=stocking_app_user
POSTGRES_PASSWORD=CHANGE_ME

# Docker Compose (app container -> db container)
DATABASE_URL=postgres://stocking_app_user:CHANGE_ME@db:5432/stocking_app

# Jika menjalankan app tanpa Docker untuk DB, gunakan host `localhost`:
# DATABASE_URL=postgres://stocking_app_user:CHANGE_ME@localhost:5432/stocking_app

# NextAuth.js / Auth.js
# Local: gunakan http://localhost:3000
# Production: gunakan domain public (mis. https://app.example.com)
AUTH_URL=http://localhost:3000
# Generate: `openssl rand -base64 32`
AUTH_SECRET=CHANGE_ME
# Jika di belakang reverse proxy (nginx) biasanya perlu trust host.
AUTH_TRUST_HOST=true

IMAGEKIT_PUBLIC_KEY=...
IMAGEKIT_PRIVATE_KEY=...
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/xxx
